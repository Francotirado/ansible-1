sinks:
  clickhouse:
    type: clickhouse
    inputs:
      - vector_logs
    endpoint: "http://{{ hostvars['clickhouse']['ansible_host'] }}:8123"
    database: "logs"
    table: "vector_logs"
    skip_unknown_fields: true
    compression: gzip
